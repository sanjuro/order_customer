<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:background="#ff6b00"
        android:orientation="vertical"
        >

    <ImageButton
            android:id="@+id/search_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/user"
            android:background="@null"
            android:onClick="storesPressed"
            />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/nameOfUser"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:gravity="center_vertical"
              android:minHeight="50dp"
              android:layout_marginLeft="20dp"
              android:paddingLeft="20dip"
              android:paddingRight="6dip"
              android:textSize="18sp"
              android:singleLine="true"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#FFFFFF"
              android:text="Please sign-in"
              android:onClick="profilePressed"
              android:clickable="true"
            />

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#d8d5ce"
            android:orientation="horizontal"
            >

        <ImageButton
                android:id="@+id/search_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/globe"
                android:background="@null"
                android:onClick="storesPressed"
                />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/myOrders"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_marginTop="6dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="20dp"
                  android:textSize="14sp"
                  android:singleLine="true"
                  android:textColor="#575b5c"
                  android:text="Back to Search"
                  android:onClick="storesPressed"
                  android:clickable="true"
                />

    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#d8d5ce"
            android:orientation="horizontal"
            >

        <ImageButton
                android:id="@+id/cart_button"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/cart_icon"
                android:background="@null"
                android:onClick="myCartPressed"
                />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/navCartButton"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="20dp"
                  android:textSize="14sp"
                  android:singleLine="true"
                  android:textColor="#575b5c"
                  android:text="My Cart"
                  android:onClick="myCartPressed"
                  android:clickable="true"
                />
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#d8d5ce"
            android:orientation="horizontal"
            >

        <ImageButton
                android:id="@+id/orders_button"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:src="@drawable/orders"
                android:background="@null"
                android:onClick="myOrdersPressed"
                />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/navOrdersButton"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="20dp"
                  android:textSize="14sp"
                  android:singleLine="true"
                  android:textColor="#575b5c"
                  android:text="My Orders"
                  android:onClick="myOrdersPressed"
                  android:clickable="true"
                />

    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#d8d5ce"
            android:orientation="horizontal"
            >

        <ImageButton
                android:id="@+id/favourite_button"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:src="@drawable/heart"
                android:background="@null"
                android:onClick="myFavouritesPressed"
                />


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/navFavoritesButton"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="20dp"
                  android:textSize="14sp"
                  android:singleLine="true"
                  android:textColor="#575b5c"
                  android:text="My Favourites"
                  android:onClick="myFavouritesPressed"
                  android:clickable="true"
                />

    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#d8d5ce"
            android:orientation="horizontal"
            >

            <ImageButton
                    android:id="@+id/loyalty_button"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="right"
                    android:src="@drawable/prize"
                    android:background="@null"
                    android:onClick="myLoyaltyCardsPressed"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/navFavoritesButton"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="10dp"
                      android:paddingRight="20dp"
                      android:textSize="14sp"
                      android:singleLine="true"
                      android:textColor="#575b5c"
                      android:text="Loyalty Cards"
                      android:onClick="myLoyaltyCardsPressed"
                      android:clickable="true"
                    />
    </LinearLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="35dp"
              android:background="#ff6b00"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingLeft="20dip"
              android:paddingRight="20dp"
              android:textSize="16sp"
              android:singleLine="true"
              android:textColor="@android:color/white"
            />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/navAccountSettingsButton"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:drawablePadding="6dip"
              android:background="#d8d5ce"
              android:gravity="center_vertical"
              android:minHeight="50dp"
              android:paddingLeft="20dip"
              android:paddingRight="6dip"
              android:textSize="12sp"
              android:singleLine="true"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#575b5c"
              android:text="Account Settings"
              android:onClick="profilePressed"
              android:clickable="true"
            />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/navFeedbackButton"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:drawablePadding="6dip"
              android:background="#d8d5ce"
              android:gravity="center_vertical"
              android:minHeight="50dp"
              android:paddingLeft="20dip"
              android:paddingRight="6dip"
              android:textSize="12sp"
              android:singleLine="true"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#575b5c"
              android:text="Customer Feedback"
              android:onClick="feedbackPressed"
              android:clickable="true"
            />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/navTermsButton"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:drawablePadding="6dip"
              android:background="#d8d5ce"
              android:gravity="center_vertical"
              android:minHeight="50dp"
              android:paddingLeft="20dip"
              android:paddingRight="6dip"
              android:textSize="12sp"
              android:singleLine="true"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#575b5c"
              android:text="Terms and Policies"
              android:onClick="termsPressed"
              android:clickable="true"
            />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/navLogoutButton"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:drawablePadding="6dip"
              android:background="#d8d5ce"
              android:gravity="center_vertical"
              android:minHeight="50dp"
              android:paddingLeft="20dip"
              android:paddingRight="6dip"
              android:textSize="12sp"
              android:singleLine="true"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#575b5c"
              android:text="Logout"
              android:onClick="logout"
              android:clickable="true"
            />
</LinearLayout>

