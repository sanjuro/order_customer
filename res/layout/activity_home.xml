<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ede9e1"
  android:orientation="vertical"
  >
  
   <RelativeLayout
       android:id="@+id/top_bar"
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:background="@drawable/top_bar_orange" 
       android:orientation="horizontal"
       android:layout_alignParentTop="true"
       android:paddingLeft="15dp"
       android:paddingRight="15dp">

       
       <ImageView 
        	android:layout_width="105dp"
        	android:layout_height="40dp"
        	android:src="@drawable/logo"   
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
        />
       
        <ImageButton 
          	android:id="@+id/sign_in_arrow_button"
          	android:layout_width="100dp"
          	android:layout_height="30dp"
          	android:layout_alignParentRight="true"
          	android:layout_centerVertical="true"
          	android:scaleType="fitXY"
          	android:src="@drawable/sign_in_arrow_button"
          	android:background="@null"
          	android:onClick="signInClicked"
          	android:contentDescription="@string/sign_up_button"   
          />
        
        <TextView
            android:id="@+id/user_name_label"
            	android:layout_width="100dp"
            	android:layout_height="30dp"
            	android:textColor="#FFFFFF"
            	android:layout_alignParentRight="true"
          		android:layout_centerVertical="true"
          		android:textSize="18sp"
          		android:onClick="logout"
          		android:clickable="true"
            >
            
            
        </TextView>
       
   </RelativeLayout>
   
   
   <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/top_bar"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="50dp"
    android:orientation="vertical"   
    >
        
    <RelativeLayout
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     >
     
     <LinearLayout
         android:layout_width="140dp"
         android:layout_height="170dp"
         android:layout_alignParentLeft="true"
         android:orientation="vertical"
         android:gravity="center_horizontal"
         >
         
         <ImageButton 
          	android:id="@+id/find_by_location_button"
          	android:layout_width="120dp"
          	android:layout_height="85dp"
          	android:scaleType="fitXY"
          	android:src="@drawable/find_by_location_button"
          	android:background="@null"
          	android:contentDescription="@string/sign_up_button"   
          />
         
         <TextView 
          	android:layout_width="fill_parent"
          	android:layout_height="60dp"
          	android:maxLines="2"
          	android:textColor="#000000"
          	android:textSize="20sp"
            android:text="@string/findbynearestlocation"
          />
         
         
         
     </LinearLayout>
     
     <LinearLayout
         android:layout_width="140dp"
         android:layout_height="170dp"
         android:layout_alignParentRight="true"
         android:orientation="vertical"
         android:gravity="center_horizontal"
         >
         
         <ImageButton 
          	android:id="@+id/find_by_category_button"
          	android:layout_width="120dp"
          	android:layout_height="85dp"
          	android:scaleType="fitXY"
          	android:src="@drawable/find_by_food_type_button"
          	android:background="@null"
          	android:contentDescription="@string/sign_up_button"   
          />
         
         <TextView 
          	android:layout_width="fill_parent"
          	android:layout_height="50dp"
          	android:maxLines="2"
          	android:textColor="#000000"
          	android:textSize="20sp"
            android:text="@string/searchbyfoodtype"
          />
         
     </LinearLayout>
        
        
    </RelativeLayout>
       
       <LinearLayout 
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:orientation="vertical"
       	android:layout_marginTop="80dp"   
       	android:layout_gravity="center_horizontal" 
       	android:gravity="center_horizontal"
       ></LinearLayout>
       
       
       
       
        <FrameLayout
         android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@null"
        android:gravity="center_horizontal"
        
        >

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_search_box"
            android:paddingLeft="15dp"
            android:paddingRight="45dp"
            android:singleLine="true"
            />

       <ImageButton 
          	android:id="@+id/search_button"
          	android:layout_width="40dp"
          	android:layout_height="40dp"
          	android:scaleType="fitXY"
          	android:layout_gravity="right"
          	android:src="@drawable/quicksearch_icon"
          	android:background="@null"
          	android:onClick="searchClicked"
          	android:contentDescription="@string/sign_in_button" 
          />

    </FrameLayout>
       
       
      
       
   </LinearLayout>
   
      <LinearLayout
       android:id="@+id/bottom_bar"
       android:layout_width="fill_parent"
       android:layout_height="65dp"
       android:background="@drawable/bottom_bar_gray" 
       android:orientation="horizontal"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:layout_alignParentBottom="true"
       android:gravity="center_vertical">    
       
         
          <ImageButton 
          	android:id="@+id/house_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/house"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button" 
          />
          
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
          
          <ImageButton 
          	android:id="@+id/pencil_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/pencil"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button"   
          />
          
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
    
          <ImageButton 
          	android:id="@+id/star_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/star"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button"   
          />
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
    
          <ImageButton 
          	android:id="@+id/wrench_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/wrench"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button"   
          />
          
   </LinearLayout>
    
    
</RelativeLayout>