<com.agimind.widget.SlideHolder xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:id="@+id/slideHolder"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                tools:context=".MainActivity" >

    <ScrollView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="@android:color/black"
            >

        <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textSize="18sp"
                >

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/nameOfUser"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawablePadding="6dip"
                      android:background="#141213"
                      android:gravity="center_vertical"
                      android:minHeight="50dp"
                      android:paddingLeft="20dip"
                      android:paddingRight="6dip"
                      android:textSize="18sp"
                      android:singleLine="true"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@android:color/white"
                      android:text="Shadley Wentzel"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/navOrdersButton"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:background="@drawable/nav_menu_heading"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="20dip"
                      android:paddingRight="20dp"
                      android:textSize="16sp"
                      android:singleLine="true"
                      android:textColor="@android:color/white"
                      android:text="MY ORDERS"
                      android:onClick="myOrdersPressed"
                      android:clickable="true"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:drawablePadding="6dip"
                      android:background="#141213"
                      android:gravity="center_vertical"
                      android:minHeight="50dp"
                      android:paddingLeft="20dip"
                      android:paddingRight="6dip"
                      android:textSize="14sp"
                      android:singleLine="true"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@android:color/white"
                      android:text="Open Orders"
                      android:onClick="myOrdersPressed"
                      android:clickable="true"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:background="@drawable/nav_menu_heading"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="20dip"
                      android:paddingRight="20dp"
                      android:textSize="16sp"
                      android:singleLine="true"
                      android:textColor="@android:color/white"
                      android:text="BACK TO STORES"
                      android:onClick="storesPressed"
                      android:clickable="true"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:drawablePadding="6dip"
                      android:background="#141213"
                      android:gravity="center_vertical"
                      android:minHeight="50dp"
                      android:paddingLeft="20dip"
                      android:paddingRight="6dip"
                      android:textSize="14sp"
                      android:singleLine="true"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@android:color/white"
                      android:text="Spur N1 City"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:background="@drawable/nav_menu_heading"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="20dip"
                      android:paddingRight="20dp"
                      android:textSize="16sp"
                      android:singleLine="true"
                      android:textColor="@android:color/white"
                      android:text="MY FAVOURTIES"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:drawablePadding="6dip"
                      android:background="#141213"
                      android:gravity="center_vertical"
                      android:minHeight="50dp"
                      android:paddingLeft="20dip"
                      android:paddingRight="6dip"
                      android:textSize="14sp"
                      android:singleLine="true"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@android:color/white"
                      android:text="Kauai"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:background="@drawable/nav_menu_heading"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="20dip"
                      android:paddingRight="20dp"
                      android:textSize="16sp"
                      android:singleLine="true"
                      android:textColor="@android:color/white"
                    />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:drawablePadding="6dip"
                      android:background="#141213"
                      android:gravity="center_vertical"
                      android:minHeight="50dp"
                      android:paddingLeft="20dip"
                      android:paddingRight="6dip"
                      android:textSize="14sp"
                      android:singleLine="true"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@android:color/white"
                      android:text="Account Settings"
                    />
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:drawablePadding="6dip"
                      android:background="#141213"
                      android:gravity="center_vertical"
                      android:minHeight="50dp"
                      android:paddingLeft="20dip"
                      android:paddingRight="6dip"
                      android:textSize="14sp"
                      android:singleLine="true"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@android:color/white"
                      android:text="Terms and Policies"
                    />
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/name_of_user"
                      android:layout_width="match_parent"
                      android:layout_height="30dp"
                      android:drawablePadding="6dip"
                      android:background="#141213"
                      android:gravity="center_vertical"
                      android:minHeight="50dp"
                      android:paddingLeft="20dip"
                      android:paddingRight="6dip"
                      android:textSize="14sp"
                      android:singleLine="true"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="@android:color/white"
                      android:text="Logout"
                    />
        </LinearLayout>


    </ScrollView>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ede9e1"
  android:orientation="vertical"
  >

  
   <RelativeLayout
       android:id="@+id/top_bar"
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:background="@drawable/top_bar_orange"
       android:orientation="horizontal"
       android:layout_alignParentTop="true"
       android:paddingLeft="15dp"
       android:paddingRight="15dp">

       <ImageView
               android:id="@+id/menuButton"
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:src="@drawable/menu"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               android:scaleType="fitXY"
               />

       <TextView
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:textSize="20sp"
  			android:textColor="#FFFFFF"
  			android:text="My Orders"
  			android:layout_centerHorizontal="true"
  			android:layout_centerVertical="true"
       />

   </RelativeLayout> <!-- Top Bar -->

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="70dp"
            >

   <RelativeLayout
    android:id="@+id/main_section"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/top_bar"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    >

  <RelativeLayout
            android:id="@+id/tab_section"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >

   		    <LinearLayout
   		       android:id="@+id/modeSwitchButtonBar"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               >

             <Button
             	android:id="@+id/current_order_button"
             	android:layout_width="wrap_content"
             	android:layout_height="38dp"
             	android:onClick="currentOrderClicked"
             	android:text="Current Order"
             />

               <Button
             	android:id="@+id/previous_orders_button"
             	android:layout_width="wrap_content"
             	android:layout_height="38dp"
             	android:onClick="orderHistoryClicked"
             	android:text="Previous Orders"
             />



           </LinearLayout>

   		</RelativeLayout>

       <LinearLayout
            android:id="@+id/current_order_section"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tab_section"
            >

           <RelativeLayout
               android:id="@+id/current_order_main_info"
               android:layout_width="fill_parent"
               android:layout_height="79dp"
               android:layout_marginBottom="10dp"
               >

               <LinearLayout
               		android:id="@+id/current_order_info_labels"
               		android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:orientation="vertical"
               		android:layout_alignParentTop="true"
               		android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >

                   <TextView
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:text="Current Open Order"
                    	android:textSize="16sp"
                    	android:textColor="#6c675c"
                        />

                   <TextView
                       android:id="@+id/lblOrderNumber"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textStyle="bold"
                       android:textColor="#6c675c"
                       android:text="R12341234"
                     ></TextView>

                   <TextView
                       android:id="@+id/lblOrderDate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textColor="#6c675c"
                       android:text="Ordered at 10:00, 10 February"
                     ></TextView>

               </LinearLayout> <!-- Current order info labels -->

               <ImageView
                  android:src="@drawable/in_progress_button"
                  android:layout_width="80.6dp"
                  android:layout_height="20dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:scaleType="fitXY"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentRight="true"
                  />

               <ImageView
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:src="@drawable/top_divider"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                />


           </RelativeLayout> <!-- Current Order Main Info Block -->

           <LinearLayout
                android:id="@+id/store_details_block"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                >

               <ImageView
                	android:id="@+id/store_thumbnail"
                	android:layout_width="50dp"
                	android:layout_height="50dp"
                	android:src="@drawable/storefront"
                	android:background="@drawable/image_border_white"
                    />

               <LinearLayout
               	android:id="@+id/store_details_labels"
               	android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:orientation="vertical"
               	android:layout_marginLeft="5dp"
               >

                  <TextView
                   android:id="@+id/lblStoreName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="12sp"
                   android:textStyle="bold"
                   android:singleLine="true"
                   android:textColor="#3b3b3b"
                   android:text="Kauai - Greenmarket Square"
                   />


                  <TextView
                   android:id="@+id/lblStoreAddress"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:singleLine="false"
                   android:textColor="#3b3b3b"
                   android:text="21 Jump Street, \nLos Angeles, California"
                   />

                  <TextView
                   android:id="@+id/lblStoreTelephone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:singleLine="true"
                   android:textColor="#3b3b3b"
                   android:text="555-1234"
                   />



               </LinearLayout>

           </LinearLayout> <!-- Store details block -->

           <ListView
           	android:id="@+id/current_order_items_list"
           	android:layout_width="fill_parent"
           	android:layout_marginBottom="15dp"
           	android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
           	android:layout_weight="7"
           />

           <RelativeLayout
            	android:id="@+id/order_total_bar"
            	android:background="@drawable/total_background_bar"
            	android:layout_width="fill_parent"
            	android:layout_height="0dp"
            	android:layout_weight="1"
                >

               <TextView
               	android:id="@+id/lblOrderTotal"
               	android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:textColor="#6c675c"
               	android:textSize="22sp"
               	android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

           </RelativeLayout>


       </LinearLayout> <!-- Current Order Section -->


    <LinearLayout
      android:id="@+id/order_history_section"
      android:orientation="vertical"
      android:layout_below="@id/tab_section"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      >

      <ListView
       android:id="@+id/lstPreviousOrders"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:dividerHeight="20dp"
       android:divider="@android:color/transparent"
       android:visibility="gone"
      />

      </LinearLayout>


   </RelativeLayout> <!-- Main Section -->

  </ScrollView>

</RelativeLayout>

</com.agimind.widget.SlideHolder>