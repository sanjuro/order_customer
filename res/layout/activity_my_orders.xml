<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ede9e1"
  android:orientation="vertical"
  >
  
   <RelativeLayout
       android:id="@+id/top_bar"
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:background="@drawable/top_bar_orange" 
       android:orientation="horizontal"
       android:layout_alignParentTop="true"
       android:paddingLeft="15dp"
       android:paddingRight="15dp">
 
       <ImageButton
         android:id="@+id/home_button"
         android:layout_width="116dp"
         android:layout_height="38dp"
         android:src="@drawable/home_button"
         android:scaleType="fitXY"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         android:background="@null"
        />
       
       <TextView
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:textSize="20sp"
  			android:textColor="#FFFFFF"
  			android:text="My Orders"
  			android:layout_centerHorizontal="true"
  			android:layout_centerVertical="true"         
       />
      
   </RelativeLayout> <!-- Top Bar -->
   
   <LinearLayout
       android:id="@+id/bottom_bar"
       android:layout_width="fill_parent"
       android:layout_height="65dp"
       android:background="@drawable/bottom_bar_gray" 
       android:orientation="horizontal"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:layout_alignParentBottom="true"
       android:gravity="center_vertical">    
       
         
          <ImageButton 
          	android:id="@+id/house_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/house"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button" 
          />
          
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
          
          <ImageButton 
          	android:id="@+id/pencil_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/pencil"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button"   
          />
          
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
    
          <ImageButton 
          	android:id="@+id/star_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/star"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button"   
          />
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
    
          <ImageButton 
          	android:id="@+id/wrench_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/wrench"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button"   
          />
          
   </LinearLayout> <!-- Bottom Bar -->
   
   
   <RelativeLayout
    android:id="@+id/main_section"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/top_bar"
    android:layout_above="@id/bottom_bar"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"   
    >
        
  <RelativeLayout 
   		    android:id="@+id/tab_section"
   		    android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
   		    android:layout_marginRight="10dp"
   		    android:orientation="horizontal"
   		    android:layout_gravity="center_vertical"
   		>
   		    
   		    <LinearLayout 
   		       android:id="@+id/modeSwitchButtonBar"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               >
                 
             <Button 
             	android:id="@+id/current_order_button"
             	android:layout_width="wrap_content"
             	android:layout_height="38dp"    
             	android:onClick="currentOrderClicked"
             	android:text="Current Order"
             />
             
               <Button 
             	android:id="@+id/previous_orders_button"
             	android:layout_width="wrap_content"
             	android:layout_height="38dp"    
             	android:onClick="orderHistoryClicked"
             	android:text="Previous Orders"
             />
                 
                       
               
           </LinearLayout>
           
   		    
       
   		    
   		</RelativeLayout>
       
       <LinearLayout
       	android:id="@+id/current_order_section"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:orientation="vertical"
       	android:layout_marginTop="8dp"
       	android:layout_below="@id/tab_section"
       >
       
           <RelativeLayout
               android:id="@+id/current_order_main_info"
               android:layout_width="fill_parent"
               android:layout_height="79dp" 
               android:layout_marginBottom="10dp">
           
               <LinearLayout
               		android:id="@+id/current_order_info_labels"
               		android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:orientation="vertical"
               		android:layout_alignParentTop="true"
               		android:layout_alignParentLeft="true"
               >
                   
                   <TextView
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:text="Current Open Order"
                    	android:textSize="20sp"
                    	android:textColor="#6c675c"
                    />
                   
                   <TextView
                       android:id="@+id/lblOrderNumber"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:textColor="#6c675c"
                       android:text="R12341234"
                     ></TextView>
                   
                   <TextView
                       android:id="@+id/lblOrderDate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:textColor="#6c675c"
                       android:text="Ordered at 10:00, 10 February"
                     ></TextView>
                   
               </LinearLayout> <!-- Current order info labels -->
               
               <ImageView
                  android:src="@drawable/in_progress_button"
                  android:layout_width="80.6dp"
                  android:layout_height="20dp"
                  android:scaleType="fitXY"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentRight="true"
                  />
               
               <ImageView
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:src="@drawable/top_divider" 
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"  
                />
               
               
           </RelativeLayout> <!-- Current Order Main Info Block -->
           
           <LinearLayout
           	android:id="@+id/store_details_block"
           	android:layout_width="fill_parent"
           	android:layout_height="wrap_content"
           	android:layout_marginBottom="10dp"
           	android:orientation="horizontal"    
           >
               
               <ImageView
                	android:id="@+id/store_thumbnail"
                	android:layout_width="50dp"
                	android:layout_height="50dp"
                	android:src="@drawable/storefront"   
                	android:background="@drawable/image_border_white"
                />
               
               <LinearLayout
               	android:id="@+id/store_details_labels"
               	android:layout_width="wrap_content"
               	android:layout_height="wrap_content"    
               	android:orientation="vertical"
               	android:layout_marginLeft="5dp"
               >
                   
                  <TextView
                   android:id="@+id/lblStoreName" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="15sp"
                   android:singleLine="true"
                   android:textColor="#3b3b3b"
                   android:text="Kauai - Greenmarket Square"
                   /> 
                   
                     
                  <TextView
                   android:id="@+id/lblStoreAddress" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="15sp"
                   android:singleLine="false"
                   android:textColor="#3b3b3b"
                   android:text="21 Jump Street, \nLos Angeles, California"
                   /> 
                   
                  <TextView
                   android:id="@+id/lblStoreTelephone" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="15sp"
                   android:singleLine="true"
                   android:textColor="#3b3b3b"
                   android:text="555-1234"
                   /> 
                   
                  
                   
               </LinearLayout>
               
           </LinearLayout> <!-- Store details block -->
           
           <ListView
           	android:id="@+id/current_order_items_list"
           	android:layout_width="fill_parent"
           	android:layout_marginBottom="5dp" 
           	android:layout_height="0dp"
           	android:layout_weight="7"
           />
           
           <RelativeLayout
            	android:id="@+id/order_total_bar"
            	android:background="@drawable/total_background_bar"
            	android:layout_width="fill_parent"
            	android:layout_height="0dp"
            	android:layout_weight="1"   
            >
               
               <TextView
               	android:id="@+id/lblOrderTotal"
               	android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:textColor="#6c675c"
               	android:textSize="22sp"
               	android:layout_alignParentRight="true"    
               	android:layout_centerVertical="true"
               />
               
           </RelativeLayout>
          
           
       </LinearLayout> <!-- Current Order Section -->
       
    
    <LinearLayout
      android:id="@+id/order_history_section"
      android:orientation="vertical"
      android:layout_below="@id/tab_section"
      android:layout_width="fill_parent"  
      android:layout_height="wrap_content"
      android:visibility="gone"
      >
       
      <ListView
       android:id="@+id/lstPreviousOrders"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:dividerHeight="20dp"
       android:divider="@android:color/transparent"
       android:visibility="gone"   
      />
      
      </LinearLayout>
       
   </RelativeLayout> <!-- Main Section -->
   
      
    
    
</RelativeLayout>