<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_row_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ede9e1"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:onClick="productSelected"
    >

    
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
    
        <TextView
            android:id="@+id/lblProductName"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#6c675c"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="Spur's Famous Pork Ribs"
            />





        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                >


            <ImageView
                    android:id="@+id/selection_arrow"
                    android:src="@drawable/selection_arrow"
                    android:layout_width="10dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    />

            <TextView
                    android:id="@+id/lblPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/selection_arrow"
                    android:background="#ed6b06"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="R35.00"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    />

        </RelativeLayout>


        <Button
                android:id="@+id/add_to_cart_button"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/lblProductName"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="#2ecc71"
                android:onClick="addToCartClicked"
                android:text="Add to Cart"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                />
    </RelativeLayout>

</LinearLayout>