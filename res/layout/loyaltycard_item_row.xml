<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ede9e1"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        >


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

        <TextView
                android:id="@+id/lblLoyaltyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:textColor="#ed6b06"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Sticky Fingers Ribs Deal"
                />


        <TextView
                android:id="@+id/lblLoyaltyDescription"
                android:singleLine="false"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/lblLoyaltyName"
                android:layout_marginRight="60dp"
                android:textSize="10sp"
                android:gravity="fill"
                android:textColor="#7b7461"
                android:text="Buy a Half, Full or Double rake of ribs and get the your eleventh ribs free"
                />

        <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lblLoyaltyCountHolder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblLoyaltyDescription"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#2ecc71"
                android:orientation="vertical"
                >

                <RelativeLayout
                        android:id="@+id/lblLoyaltyIsWonHolder"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="#8a9d42"
                        android:orientation="horizontal"
                        >

                        <TextView
                                android:id="@+id/lblLoyaltyCount"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:paddingTop="14dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:text="6 more"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentLeft="true"
                                />

                        <ImageButton
                                android:id="@+id/viewButton"
                                android:src="@drawable/tick_white"
                                android:layout_margin="10dp"
                                android:scaleType="fitXY"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@null"
                                android:onClick="viewButtonClicked"
                                android:layout_alignParentRight="true"
                                />

                </RelativeLayout>

                <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblLoyaltyIsWonHolder"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        >

                    <TextView
                            android:id="@+id/lblLoyaltyPrizeWords"
                            android:maxLines="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="fill"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:text="What do I get:"
                            />

                    <TextView
                            android:id="@+id/lblLoyaltyPrize"
                            android:maxLines="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="fill"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:text="one Full Ribs and a one litere of coke for the fine of it"
                            />

                </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>   