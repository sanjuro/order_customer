<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ede9e1"
  android:orientation="vertical"
  >
  
   <RelativeLayout
       android:id="@+id/top_bar"
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:background="@drawable/top_bar_gray" 
       android:orientation="horizontal"
       android:layout_alignParentTop="true"
       android:paddingLeft="15dp"
       android:paddingRight="15dp">

       
       
       <TextView
           android:text="@string/categories"
           android:textStyle="bold"
    	   android:textColor="#FFFFFF"
    	   android:layout_centerHorizontal="true"
    	   android:layout_centerVertical="true"
    	   android:layout_width="wrap_content"
    	   android:layout_height="wrap_content"
    	   android:textSize="24sp"
           >
           
       </TextView>
       
   </RelativeLayout>
   
   <LinearLayout
       android:layout_below="@+id/top_bar"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:paddingTop="15dp"
       >
       
       <TextView
        	android:id="@+id/categories_header_label"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:textSize="18sp"
        	android:textColor="#000000" 
        >
           
           
       </TextView>
       
        <ListView
            android:id="@+id/menuItems"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="2">
        </ListView>
       
        
        
        
   </LinearLayout>
   
      <LinearLayout
       android:id="@+id/bottom_bar"
       android:layout_width="fill_parent"
       android:layout_height="65dp"
       android:background="@drawable/bottom_bar_gray" 
       android:orientation="horizontal"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:layout_alignParentBottom="true"
       android:gravity="center_vertical">    
       
         
          <ImageButton 
          	android:id="@+id/house_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/house"
          	android:background="@null"
          	android:onClick="homeClicked"
          	android:contentDescription="@string/sign_in_button" 
          />
          
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
          
          <ImageButton 
          	android:id="@+id/pencil_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/pencil"
          	android:background="@null"
          	android:onClick="ordersPressed"
          	android:contentDescription="@string/sign_in_button"   
          />
          
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
    
          <ImageButton 
          	android:id="@+id/star_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/star"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button"   
          />
          <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </View>
    
          <ImageButton 
          	android:id="@+id/wrench_button"
          	android:layout_width="40dp"
          	android:layout_height="25dp"
          	android:scaleType="fitXY"
          	android:layout_marginRight="20dp"
          	android:src="@drawable/wrench"
          	android:background="@null"
          	android:contentDescription="@string/sign_in_button"   
          />
          
   </LinearLayout>
    
    
</RelativeLayout>
    
        
           