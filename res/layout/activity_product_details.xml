<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ede9e1"
  android:orientation="vertical"
  >
  
   <RelativeLayout
       android:id="@+id/top_bar"
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:background="@drawable/top_bar_orange" 
       android:orientation="horizontal"
       android:layout_alignParentTop="true"
       android:paddingLeft="10dp"
       android:paddingRight="10dp">
 
      <LinearLayout
         android:id="@+id/category_button"
         android:layout_width="116dp"
         android:layout_height="38dp"
         android:background="@drawable/category_button_background"
         android:scaleType="fitXY"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         android:paddingLeft="5dp"
         android:layout_marginRight="10dp"
        >
        
           <TextView
               android:id="@+id/lblCategory"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:textSize="22sp"
               android:textColor="#000000"
               android:text="Breakfast"
           /> <!-- category label -->
           
       </LinearLayout> <!-- category button -->
       
       <LinearLayout
           android:id="@+id/buy_section"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           	android:layout_centerVertical="true"
           	android:orientation="horizontal"
           >
           

             <RelativeLayout 
          	android:id="@+id/buy_button"
          	android:layout_width="100dp"
          	android:layout_height="30dp"
          	android:scaleType="fitXY"
          	android:layout_marginLeft="7dp"
          	android:paddingRight="10dp"
          	android:background="@drawable/buy_button"
          	android:contentDescription="@string/filter_button" 
          	android:onClick="buyButtonClicked"
          >
               <TextView
               	android:id="@+id/buy_button_price"
               	android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:textSize="16sp"
               	android:textColor="#000000"
               	android:text="R100"   
               	android:layout_alignParentRight="true"
               	android:layout_alignParentTop="true" 
               ></TextView>
         
               
               <TextView
               	android:id="@+id/buy_button_quantity"
               	android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:textSize="11sp"
               	android:textColor="#000000"
               	android:text="3 items"    
               	android:layout_alignParentRight="true"
               	android:layout_alignParentBottom="true" 
               ></TextView>
               
           </RelativeLayout>
           
       </LinearLayout> <!-- buy section -->

   </RelativeLayout> <!-- top bar -->

   <RelativeLayout
        android:id="@+id/main_section"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_bar"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >
          
       
       <LinearLayout
           android:id="@+id/product_details_section"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:orientation="vertical"
           >
           
           <RelativeLayout 
           	android:layout_width="fill_parent"
           	android:layout_height="wrap_content"
           >
               <TextView
                   android:id="@+id/product_name"
                   android:layout_width="220dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:textSize="16sp"
                   android:textColor="#000000"
                   android:singleLine="false"
                   android:maxLines="2"
                   android:text="Breakfast Burrito"
                   />
               
               <TextView
                   android:id="@+id/product_price"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentTop="true"
                   android:textSize="16sp"
                   android:textColor="#000000"
                   android:text="R35.00"
                   />
               
           </RelativeLayout> <!-- Product name / price -->
           
           <ImageView
               android:layout_width="fill_parent"
               android:layout_height="3dp"
               android:src="@drawable/divider_gray"
               android:layout_marginTop="5dp"
               />
           
           <LinearLayout
                android:id="@+id/description_block"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/burrito"
                        android:background="@drawable/image_border_white"
                    />

                    <TextView
                     android:id="@+id/lblProductDescription"
                     android:layout_width="fill_parent"
                     android:layout_height="95dp"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="5dp"
                     android:singleLine="false"
                     android:maxLines="6"
                     android:textSize="14sp"
                     android:textColor="#000000"
                     android:text="Scrambled eggs with avocado and bacon, wrapped in a burrito with cheese and mayonaisse"
                     />

           </LinearLayout> <!-- description block -->

           
           <RelativeLayout
               android:id="@+id/quantity_block"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               >

               <TextView
                   android:id="@+id/amount_title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:textSize="14sp"
                   android:textColor="#000000"
                   android:text="Amount:"
                   />
               
               <LinearLayout
                   android:id="@+id/seekbar_section"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:orientation="horizontal"
                   >
                   
                   <SeekBar
                            android:id="@+id/quantity_slider"
                            android:layout_width="125dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="0dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:max="10"
                            android:progress="0"
                            android:secondaryProgress="0"
                            android:progressDrawable="@drawable/quantity_scrollbar_progress"
                            android:thumb="@drawable/scrollbox_handle"
                    />
                   
                   <LinearLayout 
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:background="@drawable/quantity_circle"
                       android:layout_marginTop="0dp"
                       android:layout_marginLeft="10dp"
                       android:gravity="center"
                       >
                       
                       <TextView
                           android:id="@+id/lblQuantity"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#FFFFFF"
                           android:textSize="18sp"
                           android:layout_gravity="center_vertical|center_horizontal"
                           android:text="1"
                           />
               
                   </LinearLayout> <!-- Quantity Circle -->
                   
               </LinearLayout> <!-- Seekbar section -->
               
               
           </RelativeLayout> <!-- Quantity block -->

           <ImageView
                   android:layout_width="fill_parent"
                   android:layout_height="3dp"
                   android:src="@drawable/divider_gray"
                   android:layout_marginTop="10dp"
                   />

           <LinearLayout
                   android:id="@+id/variants_block"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/quantity_block"
                   android:orientation="horizontal"
                   android:gravity="center_horizontal"
                   android:layout_marginTop="15dp"
                   >

           </LinearLayout> <!-- Variants block -->

           <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_alignParentLeft="true"
                   android:layout_below="@id/variants_block"
                   android:gravity="center"
                   >

               <TextView
                       android:id="@+id/lblSpecialInstructions"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textColor="#000000"
                       android:text="Special Instructions:"
                       />
           </LinearLayout>

           <LinearLayout
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:layout_below="@id/lblSpecialInstructions"
                       android:gravity="center"
                       >

                   <EditText
                           android:layout_width="fill_parent"
                           android:layout_height="80dp"
                           android:inputType="text"
                           android:singleLine="false"
                           android:textSize="12sp"
                           android:maxLines="5"
                           />
           </LinearLayout> <!-- special instructions block -->

       </LinearLayout> <!-- product details block -->


   </RelativeLayout> <!-- main section -->


   <RelativeLayout
       android:id="@+id/bottom_section"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_below="@id/main_section"
       android:layout_marginTop="5dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentBottom="true"
       android:orientation="vertical"
       >

       <LinearLayout
            android:id="@+id/bottom_section"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_details_section"
            >

            <TextView
                android:id="@+id/lblTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="22sp"
                android:textColor="#000000"
                android:text="Total: R70.00"
                />

            <ImageButton
                android:id="@+id/add_to_cart_big_button"
                android:layout_width="218dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_to_cart_big_button"
                android:background="@null"
                android:layout_gravity="center_horizontal|center_vertical"
                android:onClick="addToCartClicked"
                />

        </LinearLayout> <!-- bottom section -->

   </RelativeLayout> <!-- bottom section -->

</RelativeLayout>